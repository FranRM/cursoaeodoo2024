<?xml version="1.0" encoding="UTF-8"?>
    <odoo>
        <record id="sport_leage_tree_view" model="ir.ui.view">
            <field name="name">sport.leage.tree.view</field>
            <field name="model">sport.leage</field>
            <field name="arch" type="xml">
                <tree string="Sport Issue" multi_edit='1'>
                    <field name="name"/>
                    <field name="sport_id"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                </tree>
            </field>
        </record>

        <record id="sport_leage_form_view" model="ir.ui.view">
            <field name="name">sport.leage.form.view</field>
            <field name="model">sport.leage</field>
            <field name="arch" type="xml">
                <form string="Sport leage">
                    <sheet>
                        <header>
                            <button string="Update" name="update_leage_points" type="object" class="oe_highlight"/>
                        </header>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="leage name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="sport_id"/>
                                <field name="date_start"/>
                                <field name="date_end"/>
                                <field name="leage_line_ids">
                                    <tree>
                                        <field name="team_id"/>
                                        <field name="score"/>
                                    </tree>
                                    <form>
                                        <field name="team_id"/>
                                        <field name="score"/>
                                        <field name="leage_id"/>
                                    </form>
                                </field>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </odoo>
